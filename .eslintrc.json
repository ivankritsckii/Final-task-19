{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "semi": ["error", "always"],
    "indent": ["error", 2],
    // "quotes": ["error", "single"],
    // "no-console": "warn",
    "no-unused-vars": "warn",
    "prettier/prettier": "error",
    "@typescript-eslint/no-var-requires": "off"
  }
}
